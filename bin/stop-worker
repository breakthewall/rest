#!/bin/bash
app=$1

if [[ "$app" == "" ]]; then
  echo
  echo "Usage:"
  echo "   `basename $0` <app-name>"
  echo
  exit 1
fi

network=$(echo $app | awk '{n=split($0,tool,"_"); print(tool[1])}')

COMPOSE_PROJECT_NAME=${app} \
REDIS="" \
NETWORK=$network \
docker-compose -f docker-compose-worker.yml down

docker network disconnect ${network} "$(docker inspect -f '{{.Name}}' $(docker-compose -f docker-compose-flask.yml ps -q)  | cut -c2-)"
