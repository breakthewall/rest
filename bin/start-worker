#!/bin/bash

app=$1
nb=$2
redis=$3

if [[ "$redis" == "" ]]; then
  redis="redis"
fi

if [[ "$app" == "" ]]; then
  echo
  echo "Usage:"
  echo
  echo "   `basename $0` <app-name> [nb_of_workers]"
  echo
  exit 1
fi


if [[ "$nb" == "" ]]; then
  nb=1
fi

network=$(echo $app | awk '{n=split($0,tool,"_"); print(tool[1])}')

COMPOSE_PROJECT_NAME=$app \
REDIS=$redis \
NETWORK=$network \
docker-compose -f docker-compose-worker.yml up -d --scale worker=$nb
docker network connect $network "$(docker inspect -f '{{.Name}}' $(docker-compose -f docker-compose-flask.yml ps -q)  | cut -c2-)"
